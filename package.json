    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-version-injector": "^1.3.3",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "tslint-jest": "^1.0.5",
    "typescript": "^5.4.5",
    "uglify-js": "^3.17.4",
    "unique-color": "^0.1.0"
  },
  "files": [
    "dist/**/*"
  ],
