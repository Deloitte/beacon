    "registry": "https://npm.pkg.github.com/"
  },
  "version": "0.1.0",
  "private": "true",
  "main": "dist/module.js",
  "module": "dist/module.esm.js",
  "browser": "dist/module.js",
  "scripts": {
    "lint": "eslint -c .eslintrc.js",
    "build": "rollup -c rollup.config.mjs",
